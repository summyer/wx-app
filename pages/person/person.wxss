/* pages/person/person.wxss */
page{
  height: 100%;
  width: 100%;
}

.hr-center-container{
  background:rgb(245, 245, 245);
  height: 100%;
  width: 95%;
  margin: 0 auto;
}
.login{
  font-size: 1.2em;
  font-weight: 400;
}

.hr-center-head{
  height:20%;
  background:rgb(250, 250, 250) ;
}
.hr-center-head .photo{
  display: inline-block;
  height: 150rpx;
  width: 150rpx;
  padding: 4%;
  vertical-align: middle;
}

.hr-center-main{
  font-size: 0.8em;
  margin: 20rpx 0;
  height: 60%;
  background:rgb(250, 250, 250) ;
}
.hr-center-main .li{
  vertical-align:middle;
  height: 20%;
  padding: 2%;
  border-bottom: solid 2rpx  RGB(240,240,240);
}
.hr-center-main .li view{
  display: inline-block;
  margin-top: 40rpx;
}
.hr-center-main .li image{
  vertical-align:middle;
  display: inline-block;
  height: 50%;
  width: 10%;
  margin-right: 50rpx;
}

.hr-center-main .li .right{
  float: right;
  margin-top: 40rpx;
  margin-right: 30rpx;
}

.hr-center-footer{
  text-align: center;
  font-size: 1.2em;
  color: darkgray;
  margin: 20rpx 0;
  height: 10%;
  width: 100%;
  background:rgb(250, 250, 250) ;
}